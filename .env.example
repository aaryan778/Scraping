# ===================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jobs_db
POSTGRES_USER=jobscraper
POSTGRES_PASSWORD=changeme123
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===================================================================
# REDIS CONFIGURATION (Caching)
# ===================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Cache TTL (Time To Live) in seconds
CACHE_TTL_STATS=300          # 5 minutes
CACHE_TTL_TRENDS=3600        # 1 hour
CACHE_TTL_SKILLS=3600        # 1 hour

# ===================================================================
# SCRAPING CONFIGURATION
# ===================================================================
SCRAPE_INTERVAL_HOURS=2
MAX_JOBS_PER_SEARCH=50
HEADLESS_BROWSER=true

# Rate Limiting
RATE_LIMIT_DELAY_MIN=2       # Minimum delay between requests (seconds)
RATE_LIMIT_DELAY_MAX=5       # Maximum delay between requests (seconds)
REQUEST_TIMEOUT=30           # Request timeout (seconds)
MAX_RETRIES=3                # Maximum retry attempts

# User Agent Rotation
ROTATE_USER_AGENTS=true

# Job Status Checking
CHECK_JOB_STATUS=true        # Verify if jobs are still active
STATUS_CHECK_INTERVAL_DAYS=7 # Check job status every N days
STATUS_CHECK_BATCH_SIZE=50   # Number of jobs to check per batch
MAX_CONCURRENT_CHECKS=5      # Maximum concurrent HTTP requests
HTTP_TIMEOUT=10              # HTTP request timeout (seconds)

# ===================================================================
# COUNTRIES & INDUSTRIES
# ===================================================================
COUNTRIES=US,Canada,India,Australia
INDUSTRIES=IT,Healthcare

# ===================================================================
# DEDUPLICATION
# ===================================================================
FUZZY_MATCH_THRESHOLD=85     # Similarity threshold (0-100)
ENABLE_DEDUPLICATION=true

# ===================================================================
# DATA VALIDATION
# ===================================================================
MIN_DESCRIPTION_LENGTH=50    # Minimum chars in job description
REQUIRE_COMPANY_NAME=true
REQUIRE_LOCATION=true
LOG_VALIDATION_FAILURES=true

# ===================================================================
# API CONFIGURATION
# ===================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# API Authentication
API_AUTH_ENABLED=false       # Set to 'true' to require API key
# API_KEY=your_api_key_here  # Generate with: python utils/auth.py

# API Rate Limiting
API_RATE_LIMIT=100           # Requests per minute per IP

# ===================================================================
# DASHBOARD CONFIGURATION
# ===================================================================
DASHBOARD_PORT=8501

# Streamlit Authentication
DASHBOARD_AUTH_ENABLED=true
DASHBOARD_USERNAME=admin
# SECURE: Use hashed password (generate with: python utils/auth.py yourpassword)
# DASHBOARD_PASSWORD_HASH=your_generated_hash:salt
# LEGACY: Plaintext password (not recommended for production)
DASHBOARD_PASSWORD=changeme456
DASHBOARD_COOKIE_NAME=job_scraper_auth
DASHBOARD_COOKIE_KEY=generate_random_key_here_32chars
DASHBOARD_COOKIE_EXPIRY_DAYS=30

# ===================================================================
# NOTIFICATIONS
# ===================================================================
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL=
NOTIFICATION_SLACK_WEBHOOK=  # For future Slack integration

# Error notification settings
NOTIFY_ON_SCRAPE_FAILURE=true
NOTIFY_ON_DB_ERROR=true
NOTIFY_ON_VALIDATION_ERRORS=true

# ===================================================================
# LOGGING
# ===================================================================
LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log
LOG_ROTATION=10 MB           # Rotate log when it reaches this size
LOG_RETENTION=30 days        # Keep logs for this duration

# ===================================================================
# CONFIG VERSIONING
# ===================================================================
CONFIG_VERSION=1.0.0
AUTO_RELOAD_CONFIG=true

# ===================================================================
# DEVELOPMENT
# ===================================================================
DEBUG_MODE=false
ENABLE_PROFILING=false

# ===================================================================
# OPTIONAL: AI/ML INTEGRATION (Future)
# ===================================================================
# OPENAI_API_KEY=your_key_here
# USE_AI_CLASSIFICATION=false
